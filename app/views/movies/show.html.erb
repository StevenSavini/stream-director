<div>
  <hr />
  <div class="center">
      <h2><%= @movie.title %></h2>
  </div>
  <div class="center">
    <%= link_to image_tag(@movie.image_url), movie_path(@movie) %>
  </div>
  <div class="center-text">
    <h4>Description</h4>
    <p><%= @movie.description %></p>
  </div>
  <div class="center">
      <% if @movie.source == "[]" || !@movie.source.present? %>
        <h3>This movie is not available to stream</h3>
      <% else %>
        <h3>This movie available to stream on</h3>
        <div class="row">
          <div class="column small-4 small-centered"
            <% if @movie.source.include?('netflix') %>
                <%= link_to image_tag("netflix.png", class: 'pic') %>
            <% end %>
            <% if @movie.source.include?('amazon') %>
                <%= link_to image_tag("amazon.png", class: 'pic') %>
            <% end %>
            <% if @movie.source.include?('hbo')%>
                <%= link_to image_tag("hbo.png", class: 'pic') %>
            <% end %>
            <% if @movie.source.include?('hulu') %>
                <%= link_to image_tag("hulu.png", class: 'pic') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
