<div>
  <div class="row">
    <div class="small-9 columns centered">
      <div class="card">
        <h2><%= @movie.title %></h2>
        <div class="overlay-container">
          <%= link_to image_tag(@movie.image_url), movie_path(@movie) %>
        </div>
        <div class="card-section">
          <h4>Description</h4>
          <p><%= @movie.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
