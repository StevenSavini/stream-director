<!DOCTYPE html>
<html>
  <head>
    <title>StreamDirector</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar-container" data-sticky-container>
      <div class="sticky sticky-topbar" data-sticky data-options="marginTop:0;" style="width:100%">
        <div class="top-bar">
          <div class="top-bar-left">
            <div class="top-bar-title">
              <%= link_to root_path do %>
              <%= image_tag("logo_primary.png", class: "menu-icon") %>
              <% end %>
            </div>
          </div>
          <div class="top-bar-right">
            <ul class="menu">
              <% if current_user %>
              <li class="menu-text"><%= link_to "Movies", movies_path %></li>
              <li class="menu-text"><%= link_to "Profile", user_path(current_user) %></li>
              <li class="menu-text" id="out"><%= link_to 'Sign out', destroy_user_session_path, method: "delete" %></li>
              <% else %>
              <li class="menu-text"><%= link_to "Movies", movies_path %></li>
              <li class="menu-text"><%= link_to 'Create Account', new_user_registration_path%></li>
              <li class="menu-text"><%= link_to 'Sign in', new_user_session_path%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
